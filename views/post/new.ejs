<%- include('../partials/header') %>

<div class="container">
    <br>
    <br>
<div class="box has-background-primary has-text-centered">
    <div class="box">
        <h1 class="title is-2">Create a New Post</h1>
    </div>
    <div class="box">
        <form action="/post" method="POST" enctype="multipart/form-data">
            <label for="nftname">Nft Name:</label>
            <input type="text" name="nftname" required>
            <label for="nftFile">Nft</label>
            <input type="file" name="nftFile" required><br><br>
            <label for="name">Title:</label>
            <input type="text" name="name" required><br><br>
            <label for="content">Body:</label>
            <textarea class="textarea is-primary" name="content" required></textarea><br>
            <button type="submit" class="button is-primary">Submit</button>
        
        
        
        </form>
    </div>
</div>



</div>

